<!-- Модальне вікно -->
<div class="modal fade" id="modal_passengers" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">

      <!-- Заголовок модального вікна -->
      <div class="modal-header border-secondary">
        <div class="d-flex flex-column">
          <span class="fs-3 lh-1" id="passenger_title">#Title</span>
        </div>
        <button type="button" class="btn-close bg-primary" data-bs-dismiss="modal"></button>
      </div>

      <!-- Тіло модального вікна -->
      <div class="modal-body">
        <form>

          <!-- Прізвище, ім’я, по батькові -->
          <span class="fs-5">Ім'я</span>
          <input class="form-control fs-5 bg-dark text-light border-primary mb-2" id="passenger_name" type="text"
            placeholder="Ім'я">

        </form>
      </div>

      <!-- Кнопки модального вікна -->
      <div class="modal-footer border-secondary">
        <button class="btn btn-outline-primary" id="passenger_yes" data-bs-dismiss="modal"
          onclick="modal_add_passengers()">#Yes</button>
        <button class="btn btn-outline-secondary" id="passenger_no" data-bs-dismiss="modal">Відміна</button>
      </div>
    </div>
  </div>
</div>