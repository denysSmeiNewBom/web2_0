<!-- Модальне вікно -->
<div class="modal fade" id="modal_tickets" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">

      <!-- Заголовок модального вікна -->
      <div class="modal-header border-secondary">
        <div class="d-flex flex-column">
          <span class="fs-3 lh-1" id="ticket_title">#Title</span>
        </div>
        <button type="button" class="btn-close bg-primary" data-bs-dismiss="modal"></button>
      </div>

      <!-- Тіло модального вікна -->
      <div class="modal-body">
        <form>
          <!-- Прізвище, ім’я, по батькові -->
          <span class="fs-5">Маршрут</span>
          <input class="form-control fs-5 bg-dark text-light border-primary mb-2" id="ticket_name" type="text"
            placeholder="Маршрут">
        </form>
      </div>

      <!-- Кнопки модального вікна -->
      <div class="modal-footer border-secondary">
        <button class="btn btn-outline-primary" id="ticket_yes" data-bs-dismiss="modal"
          onclick="modal_add_tickets()">#Yes</button>
        <button class="btn btn-outline-secondary" id="ticket_no" data-bs-dismiss="modal">Відміна</button>
      </div>
    </div>
  </div>
</div>